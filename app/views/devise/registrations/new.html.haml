.auth-page
  %h2.section-title ユーザー登録
  .auth-grid
    .auth-card
      %h3 新規アカウント作成
      = render "devise/shared/error_messages", resource: resource
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .field
          = f.label :email, 'Eメール'
          = f.email_field :email, autocomplete: "email", autofocus: true
        .field
          = f.label :password, 'パスワード'
          %small (6 characters minimum)
          = f.password_field :password, autocomplete: "new-password"
        .field
          = f.label :password_confirmation, 'パスワード（確認用）'
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions
          = f.submit "送信", class: "btn btn-primary btn-block"
      .links
        = link_to "ログイン", new_session_path(resource_name)
