= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-wrapper' }) do |f|
  = render 'devise/shared/error_messages', resource: resource

  .field-group
    = f.label :email, 'メール', class: 'input-label'
    = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input-box'

  .field-group
    = f.label :password, 'パスワード', class: 'input-label'
    = f.password_field :password, autocomplete: 'current-password', class: 'input-box'

  - if devise_mapping.rememberable?
    .field-group
      = f.check_box :remember_me
      = f.label :remember_me, 'ログイン状態を保持', class: 'input-label'

  .actions
    = f.submit 'Submit', class: 'submit-button'

= render 'devise/shared/links'
