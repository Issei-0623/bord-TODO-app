.auth-page
  .auth-hero ユーザー認証

  .auth-center
    .auth-card.auth-card--wide
      %h3 ログイン

      = render "devise/shared/error_messages", resource: resource

      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :email, 'Eメール', class: 'input-label'
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-box'

        .field
          = f.label :password, 'パスワード', class: 'input-label'
          = f.password_field :password, autocomplete: "current-password", class: 'input-box'

        - if devise_mapping.rememberable?
          .field.inline
            = f.check_box :remember_me
            = f.label :remember_me, 'ログインを保持する'

        .actions
          = f.submit "送信", class: "submit-button"

      .devise-links
        = link_to "ユーザー登録", new_registration_path(resource_name)
        = link_to "パスワード忘れましたか？", new_password_path(resource_name)
