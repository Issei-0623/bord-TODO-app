/ 共通フォーム（新規/編集で共用）
.board-form-card
  = form_with model: @board, local: true do |f|
    - if @board.errors.any?
      .alert.alert-danger
        %ul
          - @board.errors.full_messages.each do |msg|
            %li= msg

    .form-group
      = f.label :title, 'タイトル'
      = f.text_field :title, class: 'form-control'

    .form-group
      = f.label :content, '概要'
      = f.text_area :content, rows: 3, class: 'form-control'

    .form-actions
      = f.submit (local_assigns[:submit_label] || '作成'), class: 'btn btn-primary'
      = link_to 'キャンセル', (local_assigns[:cancel_path] || root_path), class: 'btn btn-primary'
